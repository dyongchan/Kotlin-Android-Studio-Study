<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center">
    
    
    <TableLayout
        android:layout_width="385dp"
        android:layout_height="360dp"
        android:background="#efefef">

        <TableRow
            android:layout_margin="5dp">

            <TextView
                android:layout_span="4"
                android:layout_height="60dp"
                android:gravity="center|right"
                android:text="0"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="20dp"/>

        </TableRow>

        <TableRow
            android:layout_margin="5dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="%"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/cal_btn_operator"
                android:layout_marginRight="5dp"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="CE"
                android:textSize="15dp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/cal_btn_operator"
                android:layout_marginRight="5dp"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="C"
                android:textSize="15dp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/cal_btn_operator"
                android:layout_marginRight="5dp"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="÷"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/cal_btn_operator" />

        </TableRow>

        <TableRow
            android:layout_margin="5dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="7"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/cal_btn_num"
                android:layout_marginRight="5dp"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="8"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/cal_btn_num"
                android:layout_marginRight="5dp"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="9"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/cal_btn_num"
                android:layout_marginRight="5dp"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="×"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/cal_btn_operator" />

        </TableRow>

        <TableRow
            android:layout_margin="5dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="4"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/cal_btn_num"
                android:layout_marginRight="5dp"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="5"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/cal_btn_num"
                android:layout_marginRight="5dp"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="6"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/cal_btn_num"
                android:layout_marginRight="5dp"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="—"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/cal_btn_operator" />

        </TableRow>

        <TableRow
            android:layout_margin="5dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="1"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/cal_btn_num"
                android:layout_marginRight="5dp"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="2"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/cal_btn_num"
                android:layout_marginRight="5dp"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="3"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/cal_btn_num"
                android:layout_marginRight="5dp"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="+"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/cal_btn_operator" />

        </TableRow>

        <TableRow
            android:layout_margin="5dp">

            <TextView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="+/-"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/cal_btn_num"
                android:layout_marginRight="5dp"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="0"
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/cal_btn_num"
                android:layout_marginRight="5dp"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="."
                android:textSize="20dp"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/cal_btn_num"
                android:layout_marginRight="5dp"/>

            <TextView
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:text="="
                android:textSize="20dp"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="center"
                android:background="@drawable/cal_btn_operator_2" />

        </TableRow>

    </TableLayout>

</androidx.appcompat.widget.LinearLayoutCompat>